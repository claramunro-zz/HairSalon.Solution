@using HairSalon.Models;

<h1>Hair Salon</h1>
<ul>

@if (Model.Count == 0)
{
  <p>This sytlist currently has no clients.</p>
}
@if(Model.Count != 0)
{
  @foreach (Client client in Model)
  {
    <li><a href='/clients/@client.GetId()'>@client.GetDescription()</a></li>
  }
}

</ul>
<a href="/clients/new">Add a new client.</a>

<form action="/clients/delete" method="post">
  <button type="submit" name="button">Clear All Clients</button>
</form>